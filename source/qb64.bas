    If lfb > 32 Or rfb > 32 Then f = 64
    If lib > 32 Or rib > 32 Then f = 256
    If lfb > 64 Or rfb > 64 Then f = 256
    et = ISFLOAT + f
    ev$ = _MK$(_Float, r##)

    econstmarkedup:

    i = i + 1

    If i <= n Then GoTo evalconstequ

    t = et
    evaluateconst$ = ev$

End Function

Function typevalue2symbol$ (t)

