                        GoTo dontevaluate
                    End If
                End If

                '*special case*
                If n$ = "LEN" Then
                    typ& = LONGTYPE - ISPOINTER
                    If (sourcetyp And ISREFERENCE) = 0 Then
                        'could be a string expression
