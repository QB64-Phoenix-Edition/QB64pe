            If Error_Happened Then Exit Sub
            o2$ = "(((char*)" + scope$ + n$ + ")+(" + o$ + "))"
            r$ = "*" + "(" + t$ + "*)" + o2$
            If method = 0 Then e$ = evaluatetotyp(e$, typ)
            If Error_Happened Then Exit Sub
            Print #12, r$ + "=" + e$ + ";"
        End If

        'print "setUDTrefer:"+r$,e$
        tlayout$ = tl$
        If Left$(r$, 1) = "*" Then r$ = Mid$(r$, 2)
