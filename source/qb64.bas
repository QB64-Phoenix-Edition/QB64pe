            Next
            t$ = Left$(t$, l - 1) + LTrim$(RTrim$(Str$(f))) + Mid$(t$, E + 1)
        End If
    Loop Until l = 0


    't$ = N2S(t$)
    VerifyString t$
    e$ = t$
End Sub



Sub VerifyString (t$)
