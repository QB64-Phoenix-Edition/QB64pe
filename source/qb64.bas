                    'establish which function (if any!) should be used
                    If (sourcetyp And ISFLOAT) Then
                        bits = sourcetyp And 511
                        If bits > 64 Then e$ = "func_round_float(" + e$ + ")" Else e$ = "func_round_double(" + e$ + ")"
                    Else
