    layout = ""
    layoutok = 1

    If idemode = 0 And Not QuietMode Then
        'IF LEN(a3$) THEN
        '    dotlinecount = dotlinecount + 1: IF dotlinecount >= 100 THEN dotlinecount = 0: PRINT ".";
        'END IF
        maxprogresswidth = 50 'arbitrary
