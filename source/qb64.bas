        End If
        et = b
        If ob Then et = et + ISOFFSETINBITS
        If u Then et = et + ISUNSIGNED
    End If
    ev$ = _MK$(_Integer64, r&&)
    GoTo econstmarkedup

    econstmarkupf:
    lfb = 0: rfb = 0
    lib = 0: rib = 0
    If et And ISFLOAT Then lfb = et And 511 Else lib = et And 511
    If btype(i) And ISFLOAT Then rfb = btype(i) And 511 Else rib = btype(i) And 511
    f = 32
